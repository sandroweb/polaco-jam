@import 'nib'
@import 'fonts'
@import 'spritesheet'
@import 'variables'
@import 'keyframes'

body
    margin 0
    padding 0
    background-color #000
    
#way
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    video
        width 100%
        height 100%

#terminal
    position relative
    overflow hidden
    width 500px
    height 400px
    background-color rgba(0, 0, 0, .6)
    color #3F0
    font-family 'Courier New'
    font-size 12px
    .field
        position absolute
        left -99px
        top -99px
    .lines,
    .line
        display block
        text-align left
        list-style-type none
    .lines
        padding 0
    .line
        padding 2px 10px
        word-wrap break-word
        word-break break-word
        .text-content
            position relative
            display inline-block
            line-height 16px
            .cursor
                display none
                position relative
                width 5px
                height 16px
                background-color #3F0
                vertical-align top
        &:last-child
            .text-content
                .cursor
                    display inline-block
                    animation blink-cursor .5s infinite .3s
                
                