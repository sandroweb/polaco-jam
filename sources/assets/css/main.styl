@import 'nib'
@import 'fonts'
@import 'spritesheet'
@import 'variables'
@import 'keyframes'

body
    margin 0
    padding 0
    background-color #000
    
#way
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    video
        width 100%
        height 100%
    .maze
        position absolute
        bottom 30px
        right 30px
        width 90px
        height 90px
        animation maze-green 7s infinite linear
        background-image url(../images/maze-green.png)

#intro
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-color #222
    .logo
        position absolute
        top 50%
        left 50%
        width 300px
        height 400px
        margin-left -150px
        margin-top -200px
        background-color #FFF

#terminal
    position absolute
    overflow hidden
    width 500px
    height 400px
    top 50%
    left 50%
    margin-left -250px
    margin-top -200px
    // background-color rgba(0, 0, 0, .6)
    color #3F0
    font-family 'Courier New'
    font-size 12px
    .field
        position absolute
        left -99px
        top -99px
    .lines,
    .line
        display block
        text-align left
        list-style-type none
    .lines
        padding 0
    .line
        padding 2px 10px
        word-wrap break-word
        word-break break-word
        .text-content
            position relative
            display inline-block
            line-height 16px
            .cursor
                display none
                position relative
                width 5px
                height 16px
                background-color #3F0
                vertical-align top
        &:last-child
            .text-content
                .cursor
                    display inline-block
                    animation blink-cursor .5s infinite .3s
                
                